<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../partials/head') %>
  </head>
<body id="body-registro">
  <div id="tarjeta-registro">
    <h2 id="h2-registro">Digite sus datos</h2>

    <form id="form_registrarse" name="form_registrarse" method="post">
        <div class="row">
          <div class="input-field col offset-s4 s4">
            <i class="material-icons prefix">account_circle</i>
            <input id="usuario" type="text" class="validate" name="usuario">
            <label for="usuario">Usuario</label>
          </div>
      </div>
      <div class="row">
        <div class="input-field col offset-s4 s4">
          <i class="material-icons prefix">fiber_pin</i>
          <input id="password" type="password" class="validate" name="password">
          <label for="password">Contraseña</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col offset-s4 s4">
          <i class="material-icons prefix">fiber_pin</i>
          <input id="confirmar_password" type="password" class="validate" name="confirmar_password">
          <label for="confirmar_password">Confirmar contraseña</label>
        </div>
      </div>
      <button class="btn-large waves-effect waves-light teal lighten-1" type="submit" name="action">Registrar</button>
    </form>    
    <% if (error.length) { %>
      <div class="row">
        <p><%= error %></p>
      </div>
    <% } %>
  </div>

  <footer>
      <%- include('../partials/footer') %>
  </footer>
  <%- include('../partials/scripts') %>
</body>
</html>
